        USI_dynScript2.setAttribute('type', 'text/javascript');
        USI_dynScript2.src = 'http' + (document.location.protocol == 'https:' ? 's://www' : '://www') + '.upsellit.com/hound/sale.jsp?orderID=' + escape(USI_orderID) + '&orderAmt=' + escape(USI_orderAmt);
