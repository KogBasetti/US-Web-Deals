<body>
    <header class="row hideSmall">
        <div class="container">
            <div class="col-md-12 text-center">
                @RenderSection("headerStrip", required: true)
            </div>
        </div>
    </header>
    <div class="container marginTop15">
        <div class="row">
            <div class="col-md-8 col-sm-8 confirmLeft">
                @RenderBody()
            </div>

            <div class="col-md-4 col-sm-4 centerSmall smallMarginTop20">
                @RenderSection("rightPanel", required: false)
            </div>
        </div>
    </div>
    <footer class="container marginTop15 marginBot20">
        <div class="row">
            <div class="col-md-12 text-center f12">
                <hr class="hideBig">
                @RenderSection("footerSection", required: true)
            </div>
        </div>
    </footer>
</body>
